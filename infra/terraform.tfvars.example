# -----------------------------------------------------------------------------
# Learn to Cloud - Terraform Variables Example
# -----------------------------------------------------------------------------
# Copy this file to terraform.tfvars.local and fill in your values.
# The .local file is gitignored and safe for secrets.
#
# Usage:
#   cp terraform.tfvars.example terraform.tfvars.local
#   # Edit terraform.tfvars.local with your values
#   terraform plan -var-file="terraform.tfvars.local"
# -----------------------------------------------------------------------------

# Required - Azure subscription
subscription_id = "your-azure-subscription-id"

# Required - GitHub OAuth App (create at https://github.com/settings/developers)
github_client_id     = "Ov23xxx"
github_client_secret = "xxx"

# Required - Session cookie signing key
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
session_secret_key = "your-64-char-hex-string"

# Required - Google API key for Gemini AI features
google_api_key = "AIzaSyxxx"

# Required - CTF master secret for flag generation
labs_verification_secret = "your-secure-random-secret"

# Optional - Override defaults
# location    = "centralus"
# environment = "dev"
# alert_email = "learntocloud@gmail.com"
