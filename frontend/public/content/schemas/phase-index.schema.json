does {
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "phase-index.schema.json",
  "title": "Phase Index",
  "description": "Top-level phase definition containing metadata, topics, capstone info, and verification requirements.",
  "type": "object",
  "required": [
    "id",
    "slug",
    "name",
    "description",
    "short_description",
    "badge",
    "theme",
    "order",
    "prerequisites",
    "hands_on_verification",
    "topics"
  ],
  "additionalProperties": false,
  "properties": {
    "id": {
      "type": "integer",
      "description": "Unique phase identifier (0â€“6)."
    },
    "slug": {
      "type": "string",
      "pattern": "^phase[0-6]$",
      "description": "URL-safe phase slug, e.g. 'phase1'."
    },
    "name": {
      "type": "string",
      "minLength": 1,
      "description": "Human-readable phase name."
    },
    "description": {
      "type": "string",
      "minLength": 1,
      "description": "Full phase description shown on the phase page."
    },
    "short_description": {
      "type": "string",
      "minLength": 1,
      "description": "One-line summary shown in phase cards."
    },
    "badge": {
      "$ref": "#/$defs/Badge"
    },
    "theme": {
      "$ref": "#/$defs/Theme"
    },
    "order": {
      "type": "integer",
      "minimum": 0,
      "description": "Display order (0-indexed, matches phase number)."
    },
    "prerequisites": {
      "type": "array",
      "items": { "type": "string" },
      "description": "List of prerequisite descriptions."
    },
    "topics": {
      "type": "array",
      "minItems": 1,
      "items": { "type": "string" },
      "description": "Ordered list of topic slugs in this phase."
    },
    "capstone": {
      "$ref": "#/$defs/CapstoneOverview",
      "description": "Capstone project summary (omit if phase has no capstone)."
    },
    "hands_on_verification": {
      "$ref": "#/$defs/HandsOnVerification"
    },
    "certifications": {
      "oneOf": [
        {
          "type": "object",
          "description": "Single certification recommendation.",
          "required": ["title", "url"],
          "properties": {
            "title": { "type": "string" },
            "url": { "type": "string", "format": "uri" },
            "description": { "type": "string" },
            "is_necessary": { "type": "boolean" },
            "is_helpful": { "type": "string" },
            "recommendation": { "type": "string" }
          }
        },
        {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["title", "url"],
            "properties": {
              "provider": { "type": "string" },
              "title": { "type": "string" },
              "url": { "type": "string", "format": "uri" },
              "description": { "type": "string" },
              "is_necessary": { "type": "boolean" },
              "recommendation": { "type": "string" }
            }
          },
          "description": "List of certification recommendations."
        }
      ]
    },
    "additional_context": {
      "type": "string",
      "description": "Extra context shown at the top of the phase page."
    },
    "tip": {
      "type": "string",
      "description": "Highlighted tip callout."
    },
    "warning": {
      "type": "string",
      "description": "Highlighted warning callout."
    },
    "entry_level_jobs": {
      "type": "object",
      "required": ["description"],
      "properties": {
        "description": { "type": "string" },
        "resources": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["text", "url"],
            "properties": {
              "text": { "type": "string" },
              "url": { "type": "string", "format": "uri" }
            }
          }
        }
      },
      "description": "Entry-level job information relevant to this phase."
    },
    "additional_resources": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["text", "url"],
        "properties": {
          "text": { "type": "string" },
          "url": { "type": "string", "format": "uri" }
        }
      },
      "description": "Extra resource links."
    },
    "connections": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["phase", "description"],
        "additionalProperties": false,
        "properties": {
          "phase": { "type": "string" },
          "description": { "type": "string" }
        }
      },
      "description": "Cross-phase connections showing how phases relate."
    },
    "security_overviews": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["text", "url"],
        "additionalProperties": false,
        "properties": {
          "text": { "type": "string" },
          "url": { "type": "string", "format": "uri" }
        }
      },
      "description": "Security framework overview links for security-focused phases."
    }
  },
  "$defs": {
    "Badge": {
      "type": "object",
      "required": ["name", "description", "icon"],
      "additionalProperties": false,
      "properties": {
        "name": { "type": "string" },
        "description": { "type": "string" },
        "icon": { "type": "string" }
      }
    },
    "Theme": {
      "type": "object",
      "required": ["icon", "bg_class", "border_class", "text_class"],
      "additionalProperties": false,
      "properties": {
        "icon": { "type": "string" },
        "bg_class": { "type": "string" },
        "border_class": { "type": "string" },
        "text_class": { "type": "string" }
      }
    },
    "CapstoneOverview": {
      "type": "object",
      "required": ["title", "summary", "includes"],
      "additionalProperties": false,
      "properties": {
        "title": { "type": "string" },
        "summary": { "type": "string" },
        "includes": {
          "type": "array",
          "items": { "type": "string" }
        },
        "topic_slug": {
          "type": "string",
          "description": "Slug of the capstone topic within this phase."
        }
      }
    },
    "HandsOnVerification": {
      "type": "object",
      "required": ["summary", "includes"],
      "additionalProperties": false,
      "properties": {
        "summary": { "type": "string" },
        "includes": {
          "type": "array",
          "items": { "type": "string" }
        },
        "requirements": {
          "type": "array",
          "items": { "$ref": "#/$defs/Requirement" }
        }
      }
    },
    "Requirement": {
      "type": "object",
      "required": ["id", "submission_type", "name", "description", "submission_instructions"],
      "additionalProperties": false,
      "properties": {
        "id": { "type": "string" },
        "submission_type": { "type": "string" },
        "name": { "type": "string" },
        "description": { "type": "string" },
        "submission_instructions": { "type": "string" },
        "example_url": { "type": "string", "format": "uri" },
        "required_repo": { "type": "string" },
        "note": { "type": "string", "description": "Additional note about this requirement." }
      }
    }
  }
}
