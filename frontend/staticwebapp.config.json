{
  "navigationFallback": {
    "rewrite": "/index.html"
  },
  "routes": [
    {
      "route": "/api/*",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/.clerk/*",
      "allowedRoles": ["anonymous"],
      "rewrite": "/api/.clerk/*"
    },
    {
      "route": "/content/*",
      "headers": {
        "Cache-Control": "public, max-age=3600, stale-while-revalidate=86400"
      }
    },
    {
      "route": "/assets/*",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    }
  ],
  "platform": {
    "apiRuntime": "node:20"
  },
  "trailingSlash": "never",
  "mimeTypes": {
    ".json": "application/json"
  }
}
