{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "API: FastAPI (uvicorn)",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": ["main:app", "--reload", "--reload-exclude", ".venv", "--host", "0.0.0.0", "--port", "8000"],
      "cwd": "${workspaceFolder}/api",
      "envFile": "${workspaceFolder}/api/.env",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/api",
        "DYLD_FALLBACK_LIBRARY_PATH": "/opt/homebrew/lib"
      },
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "Tailwind: Watch",
      "type": "node-terminal",
      "request": "launch",
      "command": "npx @tailwindcss/cli -i static/css/input.css -o static/css/styles.css --watch",
      "cwd": "${workspaceFolder}/api"
    }
  ],
  "compounds": [
    {
      "name": "API + Tailwind",
      "configurations": ["API: FastAPI (uvicorn)", "Tailwind: Watch"]
    }
  ]
}
